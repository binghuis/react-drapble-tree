{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "release": "np --no-yarn --no-tests --no-cleanup",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-drapble-tree",
  "author": "宋秉徽",
  "module": "dist/react-drapble-tree.esm.js",
  "size-limit": [
    {
      "path": "dist/react-drapble-tree.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-drapble-tree.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.3",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "autoprefixer": "^10.3.7",
    "cssnano": "^5.0.8",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "np": "^7.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.1",
    "size-limit": "^6.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "browserslist": [
    "last 2 versions",
    "Android >= 4.4",
    "iOS >= 9"
  ]
}
